// share the gfg code editor code.

int getSecondLargest(int *arr, int n) {
    
    int max=INT_MIN;
    int second_max=INT_MIN;
    int i;
    for(i=0;i<n;i++){
        if(arr[i]>max){
            second_max=max;
            max=arr[i];
        }
        else if(arr[i]>second_max && arr[i]!=max){
            second_max=arr[i];
        }
    }
    if(second_max==INT_MIN) return -1;
    return second_max;
}

